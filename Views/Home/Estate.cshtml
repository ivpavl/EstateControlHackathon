  <body>
    <nav class="navbar">
      <div class="container-fluid">
        <div class="page-name">Моя нерухомість</div>
        <div class="link"><a href="/my_account.html">Мій кабінет</a></div>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        <div class="col-7 estate-list">

          <div class="unit-card">
            <div class="row">
              <div class="col-6 description">
                Просп. Степана Бандери, 16Б, Київ
              </div>
              <div class="status col-6">В оренді</div>
            </div>
            <div class="area description">Площа: 200 кв.м.</div>
            <div class="rooms description">Кількість кімнат: 4</div>
            <div class="price description">666 грн</div>
            <div><img class="unit-photo" src="/src/img/unit_photo.jpg" /></div>
          </div>

<script>
fetch('http://localhost:5117/api/Estate/getlist')
  .then(response => response.json())
  .then(data => {
    const estateList = data.userEstateList;
    const html = estateList.map(estate => {
      return `
        <div class="unit-card">
          <div class="row">
            <div class="col-6 description">
              ${estate.Address}
            </div>
            <div class="status col-6">${estate.StatusId === 0 ? 'В оренді' : 'Продано'}</div>
          </div>
          <div class="area description">Площа: ${estate.Area} кв.м.</div>
          <div class="rooms description">Кількість кімнат: ${estate.RoomsNum}</div>
          <div class="price description">${estate.Price} грн</div>
          <div><img class="unit-photo" src="/uploads/${estate.Photo}" /></div>
        </div>
      `;
    }).join('');
    
    document.querySelector('.estate-list').innerHTML = html;
  });

</script>

